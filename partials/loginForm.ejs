<form action="/login" method="POST" class="loginForms loginPage">
    <h1 class="labels">Log In</h1>
    <div class="labelFormPair">
        <label class="labels" for="email">Email:</label>
        <input name="email" class="email" type="email" required>
    </div>
    <div class="labelFormPair">
        <label class="labels" for="password">Password:</label>
        <input name="password" class="password" type="password" required>
    </div>
    <button class="buttons submit" type="submit">Log in</button>
    <button class="buttons closeLogin">Close</button>
    <label class="labels accountLBL">Don't have an account? <a href="#" class="nav-link goToSignup">Sign up</a></label>
</form>